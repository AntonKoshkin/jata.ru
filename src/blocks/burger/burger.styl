.burger
	@extend $font-reset, $btn-reset
	
	width 30px
	height 18px
	position relative
	flex-shrink 0
	
	&--mb14
		margin-bottom 14px
	
	&__strip
		width 100%
		height 4px
		position absolute
		background-color white
		border-radius 2px
		
		&:nth-child(1)
		&:nth-child(3)
			@extend $hor-center
		
		&:nth-child(1)
			top 0
		
		&:nth-child(2)
			@extend $center

		&:nth-child(3)
			bottom 0
	
	@media (min-width tablet)
		display none