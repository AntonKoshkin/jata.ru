.tablett
	margin-left -35px
	margin-right -10px
	text-align center
	margin-bottom -100px
	flex-basis 100%
	
	&__face
		@extend $font-reset
		
		display inline-block
		position relative
		width 450px
		height 228px
	
	&__img
		max-width 450px
		width 100%
	
	@media (min-width tablet)
		margin-left 0
		margin-right -310px
		min-width 870px
		flex-grow 1
		margin-bottom -150px
		
		&__face
			width 860px
			height 435px
		
		&__img
			max-width 860px
	
	@media (min-width desktop)
		margin-right 50px
		flex-grow 0
		max-width none
		margin-bottom -80px
		text-align right