.input
	position relative
	margin 18px 0
	
	&--fxb46p
		flex-basis 48%
	
	&--fxb100p
		flex-basis 100%
	
	&__input
		width 100%
		border none
		border-bottom 2px solid gray-border
		position relative
		background-color transparent
		
		&[data-filled='true'][data-correct='true']
			border-color blue
		
		&[data-correct='false']
			border-color red
	
	&__label
		@extend $text-14, $fw500
		slow all
		
		transform-origin left center
		color gray-border
		position absolute
		top 0
		left 0
		
		[data-filled='true'] + &
			transform translateY(-16px) scale(.75)
		
		[data-filled='true'][data-correct='true'] + &
			color blue
		
		[data-correct='false'] + &
			color red
	
	&__input:focus + &__label
		transform translateY(-16px) scale(.75)