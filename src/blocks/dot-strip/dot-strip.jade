mixin dotStrip
	.dot-strip
		.dot-strip__line
		.dot-strip__dots
			if block
				block
		.dot-strip__runner(data-pos='one')

mixin dsDot(text)
	if attributes.mods
		if typeof attributes.mods === 'string'
			-var mods = 'dot-strip__dot--' + attributes.mods
		else
			-var mods = []
			each mod, i in attributes.mods
				-mods[i] = 'dot-strip__dot--' + mod

	label.dot-strip__label(
		class=mods
		for=id)
		input.dot-strip__input(
			data-dot-pos=attributes['data-dot-pos']
			type='radio'
			name='dotStrip'
			id=attributes.id
			checked=attributes.checked)
		span.dot-strip__dot
		.dot-strip__text=text