.promo-logo
	display flex
	align-items center
	
	&--index
		margin-left 20px
		width 280px
		padding-bottom 230px
		margin-top -30px
	
	&__img
		size 100px
		margin-right 40px
	
	&--index &__img
		display none
	
	&__text
		@extend $fw500
		
		font-size 6.25rem
		
		&--red
			color red
		
	&--adv &__text
		font-size 5rem
		margin-bottom 12px
		
	@media (min-width tablet)
		&--index
			width 330px
			padding-bottom 0
		
		&--adv
			width 390px
		
		&--adv &__img
			size 125px
		
		&__text
			font-size 7.5rem
		
		&--adv &__text
			font-size 6.5rem
	
	@media (min-width desktop)
		&--index
			width 395px
			margin-left 0
			margin-bottom 15px
		
		&--adv
			width 580px
		
		&--adv &__img
			size 185px
		
		&__text
			font-size 8.75rem
			padding-left 5px
		
		&--adv &__text
			font-size 7rem