.mansoor
	background-color gray-lighter
	width 100%
	position relative
	box-shadow 2px 2px 5px rgba(black, .3)
	margin-bottom 10px
	
	&--social
	&--mail
	&--address
		margin-bottom 40px
	
	&--map
		position relative
		min-height 450px
	
	&__content
		padding 20px
		padding-left 140px
		display flex
		align-items center
		min-height 120px
		flex-wrap wrap
		align-content center

	&--social &__content
		justify-content center
		padding-left 20px
	
	&--mail &__content
		flex-direction column
		flex-wrap nowrap
		justify-content center
		align-items flex-start
		min-height 230px
	
	&--address &__content
		min-height 250px
	
	&--offis &__content
		padding 40px
		padding-left 40px
	
	&--map &__content
		width 100%
		padding 0
		display flex
		flex-direction column
		align-items stretch
		overflow hidden
	
	&__icon
		background-color blue-dark
		position absolute
		top -18px
		left 40px
		
		&:before
			@extend $pseudo, $abs
			triangle right-bottom 18px 12px blue-darkest

			top 0
			right 100%
		
		&[data-icon='smartphone']
			bicon(ringing-smartphone-white, 36, 70)
		
		&[data-icon='mail']
			bicon(closed-letter-white, 44, 70)
		
		&[data-icon='pointer']
			bicon(m-pointer-white, 38, 70)
	
	&__phone
		@extend $text-22, $fw100
		
		width 100%
	
	&__time
		color gray
		position relative
		padding-left 20px
		
		&:before
			@extend $pseudo-left
			bicon(round-clock-gray, 16)
		
		&--mb10
			margin-bottom 20px
	
	&__mail
		@extend $text-18, $fw100
		
		color blue
		margin-bottom 10px
	
	&__number
		color gray
		padding-left 18px
		position relative
		margin-right 14px
		
		&:before
			@extend $pseudo-left
			bicon(ringing-handset-gray, 14)
	
	@media (min-width tablet)
		width 32%
		flex-grow 1
		margin-bottom 0
		
		&--smartphone
			margin-bottom 10px
		
		&--map
			width 66%
			order -1
		
		&--offis
			// height 515px
			flex-grow 0
		
		&--offis &__content
			padding-top 25px
			padding-bottom 25px
		
		&__content
			padding-left 35px
			padding-top 70px
			align-content flex-start
		
		&--social &__content
			padding-top 20px