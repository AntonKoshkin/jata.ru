mixin mansoor
	if attributes.mods
		if typeof attributes.mods === 'string'
			-var mods = 'mansoor--' + attributes.mods
		else
			-var mods = []
			each mod, i in attributes.mods
				-mods[i] = 'mansoor--' + mod

	.mansoor(class=mods)
		if attributes.icon
			.mansoor__icon(data-icon=attributes.icon)
		.mansoor__content
			if block
				block

mixin mPhone(normalPhone, textPhone)
	a.mansoor__phone(href='tel:'+normalPhone)=textPhone

mixin mTime(s, po)
	if attributes.mods
		if typeof attributes.mods === 'string'
			-var mods = 'mansoor__time--' + attributes.mods
		else
			-var mods = []
			each mod, i in attributes.mods
				-mods[i] = 'mansoor__time--' + mod

	p.mansoor__time(class=mods)
		=s
		|  - 
		=po

mixin mMail(mail)
	a.mansoor__mail(href='mailto:'+mail)=mail

mixin mNumber(normalPhone, textPhone)
	a.mansoor__number(href='tel:'+normalPhone)=textPhone