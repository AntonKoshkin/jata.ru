.select
	@extend $font-reset
	
	position relative
	
	&--w200
		width 200px
	
	&:before
		@extend $pseudo-right
		triangle down 6px 5px black
		
		right 10px
		border-radius 2px
	
	&__input
		@extend $text-14, $fw500
		
		border 2px solid blue
		border-radius 3px
		width 100%
		padding 4px
		padding-left 10px
		background-color transparent
		position relative
		cursor pointer
		
		&[data-correct='false']
			border-color red
		
	&--open &__input
		border-color gray
	
	&__variants
		position absolute
		list-style-type none
		background-color white
		display none
		top 100%
		left 0
		width 100%
		border 1px solid blue
		border-top none
		max-height 132px
		overflow auto
	
	&--open &__variants
		display block
	
	&__variant
		@extend $text-14
		
		display block
		cursor pointer
		padding 4px 0 4px 10px
		
		&:hover
			color white
			background-color blue
		
		&--color
			height 27px
			
			&:hover
				box-shadow inset 0 0 0 1px blue