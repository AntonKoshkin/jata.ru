.select
	position relative
	
	&:before
		@extend $pseudo-right
		triangle down 8px 7px black
		
		right 10px
		border-radius 2px
	
	&__input
		border 3px solid blue
		border-radius 3px
		width 150px
		padding 2px
		padding-left 10px
		background-color transparent
		position relative
		cursor pointer
		
	&--open &__input
		border-color gray
	
	&__variants
		position absolute
		list-style-type none
		background-color white
		display none
		top 100%
		left 0
		width 100%
		border 1px solid white
		border-top none
		box-shadow inset 0 0 0 1px blue
		max-height 110px
		overflow auto
	
	&--open &__variants
		display block
	
	&__variant
		display block
		cursor pointer
		padding 4px 0 4px 10px
		
		&:hover
			color white
			background-color blue
		
		&--color
			height 27px
			
			&:hover
				box-shadow inset 0 0 0 1px blue