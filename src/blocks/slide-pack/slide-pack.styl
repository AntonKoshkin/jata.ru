.slide-pack
	slow transform
	
	display flex
	align-items flex-end
	justify-content space-between
	width 2200px

	&__slide
		width 400px
		overflow hidden
	
	&__faces
		slow transform
		display flex
		justify-content space-between
		align-items center
	
	&__face
		width 400px
	
	&__img
		width 100%
	
	&__pags
		display flex
		border-radius 4px
		height 20px
		align-items stretch
		border 1px solid gray
	
	&__pag
		@extend $btn-reset, $text-14
		
		flex-grow 1
		text-transform lowercase

		&:first-children
			border-radius 4px 0 0 4px
		
		&:last-children
			border-radius 0 4px 4px 0

		&--active
			background-color blue
			color white

[data-slider-pos*='-3']
	width 2200px

[data-slider-pos*='-2']
	width 1300px

[data-slider-pos='1-3']
	transform translateX(0)

[data-slider-pos='2-3']
	transform translateX(-900px)

[data-slider-pos='3-3']
	transform translateX(-1800px)

[data-slider-pos='1-2']
	transform translateX(0)

[data-slider-pos='2-2']
	transform translateX(-900px)