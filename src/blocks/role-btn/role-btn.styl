.role-btn
	&--mb30
		margin-bottom 30px
		
	&__label
		display block
		cursor pointer
	
	&__input
		@extend $hidden-input
	
	&__text
		@extend $text-18
		slow background-color
		
		display block
		color blue-dark
		font-weight light
		padding-top 15px
		padding-bottom 15px
		text-align center
		background-color gray-lighter
		border 1px solid gray-mid-dark
		box-shadow 1px 1px 10px rgba(black, .5)
	
	&--top &__text
		border-radius 8px 8px 0 0
		padding-top 16px
		padding-bottom 16px
	
	&--bottom &__text
		border-radius 0 0 8px 8px
	
	&__input:checked + &__text
		background-color blue-dark
		box-shadow inset 0 0 15px rgba(black, .5)
		border 0
		color white