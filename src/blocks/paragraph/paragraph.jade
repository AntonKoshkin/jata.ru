mixin paragraph(strings)
	if attributes.mods
		if typeof attributes.mods === 'string'
			-var mods = 'paragraph--' + attributes.mods
		else
			-var mods = []
			each mod, i in attributes.mods
				-mods[i] = 'paragraph--' + mod

	.paragraph(
		class=mods)
		if strings
			if typeof strings === 'string'
				p.paragraph__text(
					data-icon=attributes['data-icon'])!=strings
					if block
						block
			else
				-var i = 0
				each string in strings
					if typeof string === 'string'
						p.paragraph__text(
							data-icon=attributes['data-icon'])!=string
					else
						-var mods = []
						each mod, i in string[1]
							-mods[i] = 'paragraph__text--' + mod
						p.paragraph__text(
							data-icon=attributes['data-icon']
							class=mods)!=string[0]
		else
			p.paragraph__text(data-icon=attributes['data-icon'])
				if block
					block

mixin pSpan(text)
	if attributes.mods
		if typeof attributes.mods === 'string'
			-var mods = 'paragraph__text--' + attributes.mods
		else
			-var mods = []
			each mod, i in attributes.mods
				-mods[i] = 'paragraph__text--' + mod

	span(class=mods)
		if block
			block