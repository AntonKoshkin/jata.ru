.paragraph
	&--promo
		display none
	
	&--mb65
		margin-bottom 65px
	
	&--cr-fz30-ttu-mb10
		margin-bottom 10px
	
	&--with-checker
		display flex
		align-items center
		justify-content center
		
		&:not(:last-child)
			margin-bottom 10px
		
		&:after
			bicon(square-galka-red, 22)
			
			display inline-block
			content ''
			margin-left 10px
	
	&--about
		padding-left 10px
		padding-right 10px
		margin-bottom 20px
		max-width 926px
		margin-left auto
		margin-right auto
	
	&--mansoor-soc
	&--mansoor-blue
		width 100%
		margin-bottom 10px
	
	&--mansoor-address
		width 100%
		margin-bottom 5px
	
	&--address-red
	&--address-blue
		width 100%
		margin-bottom 10px
	
	&--team-desc
		text-align center
	
	&__text
		&--about-title
			@extend $text-24
			
		&[data-icon='red-pointer']
			margin-bottom 5px
			padding-left 20px
			position relative
			
			&:before
				@extend $pseudo-left
				
				bicon(fat-pointer-red, 16)
			
		&[data-icon='blue-pointer']
			margin-bottom 5px
			padding-left 20px
			position relative
			
			&:before
				@extend $pseudo-left
				
				bicon(fat-pointer-blue, 16)
	
	&--cr &__text
		color red
	
	&--cw &__text
		color white
	
	&--fz24 &__text
		@extend $text-24

	&--fz30 &__text
		@extend $text-30

	&--fz40 &__text
		@extend $text-40
	
	&--fw100 &__text
		@extend $fw100
	
	&--fw500 &__text
		@extend $fw500
	
	&--ttu &__text
		text-transform uppercase
	
	&--with-checker &__text
		@extend $text-20
	
	&--cr-fz30-ttu-mb10 &__text
		@extend $text-30

		color red
		text-transform uppercase
	
	&--promo &__text
		@extend $text-18, $fw500
		
		color white
		text-align justify
	
	&--way &__text
		@extend $fw100
	
	&--tar &__text
		text-align right
	
	&--about &__text
		text-align center
	
	&--rectangle &__text
		color white
		line-height 1.5em
	
	&--gray &__text
		text-align center
	
	&--mansoor &__text
		@extend $text-18
		
		text-align center
	
	&--mansoor &__text
		@extend $text-18, $fw100
		
		text-transform lowercase
	
	&--mansoor-soc
		text-align center
	
	&--mansoor-blue &__text
		@extend $text-18
		
		text-transform uppercase
		color blue
	
	&--address-red
	&--address-blue
		@extend $text-18
		
		text-transform uppercase
	
	&--address-red
		color red
	
	&--address-blue
		color blue
	
	&--gray a
		color blue
		text-decoration underline
	
	&--team-desc &__text
		line-height 2em
		margin-bottom 40px
		
	&--developer
		@extend $text-24, $fw300

	@media (min-width tablet)
		&--with-checker
			justify-content flex-end
		
		&--jataru
			width 820px
			margin auto
		
		&--about
			margin-bottom 50px
		
		&__text
			&--about-title
				font-size 2rem
		
		&--cr-fz30-ttu-mb10 &__text
			text-align right
		
		&--jataru &__text
			@extend $text-18
			
			line-height 1.9em
		
		&--way &__text
			line-height 1.5em
		
		&--about &__text
		&--gray &__text
			font-size 1.125rem
		
		&--gray &__text
			max-width 924px
			margin auto
			line-height 2em
	
		&--promo
			display block
			max-width 700px
			padding-right 50px
			text-shadow 1px 1px 1px #000
			margin-bottom 35px
		
	@media (min-width desktop)
		&--jataru
			width 980px
		
		&--about
			margin-bottom 70px
			max-width 1100px

		&__text
			&--about-title
				font-size 2.5rem
		
		&--about &__text
			font-size 1.375rem
		
		&--way &__text
			font-size 1.5rem
		
		&--rectangle &__text
			font-size 1.125rem
		
		&--gray &__text
			max-width 1020px