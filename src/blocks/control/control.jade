mixin control(img)
	.control
		.control__shadow
		img.control__img(
			src='./img/'+img
			alt='Контроль качества')
		if block
			block

mixin cFrase(title, text)
	if attributes.mods
		if typeof attributes.mods === 'string'
			-var mods = 'control__frase--' + attributes.mods
		else
			-var mods = []
			each mod, i in attributes.mods
				-mods[i] = 'control__frase--' + mod

	.control__frase(class=mods)
		h4.control__text.control__text--fat!=title
		p.control__text!=text