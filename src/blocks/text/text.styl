.text
	background-color white
	padding 20px 15px
	
	h3
	p
		@extend $main-text, $fw300
		
		line-height 2.25em
		margin-bottom 30px
	
	.tab
		padding-left 50px
	
	.space
		width 50px
		display inline-block
	
	@media (min-width tablet)
		background none
		padding 80px 100px 70px
		
		h3
		p
			font-size 1.375rem
			line-height 1.63em
		
		h3
			font-weight 500
			font-style italic
	
	@media (min-width desktop)
		padding 80px 150px 70px