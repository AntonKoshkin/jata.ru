mixin pin(title, p1, p2, p3, img)
	if attributes.mods
		if typeof attributes.mods === 'string'
			-var mods = 'pin--' + attributes.mods
		else
			-var mods = []
			each mod, i in attributes.mods
				-mods[i] = 'pin--' + mod

	.pin(class=mods)
		.pin__ring
		.pin__pointer
		.pin__card
			.pin__desc
				p.pin__title=title
				.pin__texts
					p.pin__text=p1
					p.pin__text=p2
					p.pin__text=p3
			.pin__face
				img.pin__img(
					src=img
					alt='')