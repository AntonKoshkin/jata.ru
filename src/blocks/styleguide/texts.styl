$main-lh
	line-height 1.3em
	
$main-fz
	font-size fz

$main-ff
	font-family museo

$text
	font-weight normal
	color text-black

$main-text
	@extend $text
	
	font-size 1rem

$small-text
	@extend $text
	
	font-size .875rem

$title
	color blue-dark

$title-h1
	@extend $title
	
	font-size 3.125rem
	font-weight medium

$title-h2
	@extend $title
	
	font-size 2.5rem
	font-weight medium

$title-h3
	@extend $title
	
	font-size 1.5rem
	font-weight light