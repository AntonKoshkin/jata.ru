icon(name, path)
	${name}
		background-image url(path)

icon(ikonka, '/img/img.img')
icon(lock, 'data:image/svg+xml;base64,')





bicon(icon, icon_size=0, bg_size=icon_size)
	@extend ${icon}, $bg-one
	
	if icon_size != 0
		background-size icon_size icon_size
		width bg_size
		height @width

