mixin title(h, text)
	if attributes.mods
		if typeof attributes.mods === 'string'
			-var mods = 'title--' + attributes.mods
		else
			-var mods = []
			each mod, i in attributes.mods
				-mods[i] = 'title--' + mod

	case h
		when 1
			h1.title(class=mods)=text
				if block
					block
			
		when 2
			h2.title(class=mods)=text
				if block
					block
			
		when 3
			h3.title(class=mods)=text
				if block
					block
			
		when 4
			h4.title(class=mods)=text
				if block
					block
			
		when 5
			h5.title(class=mods)=text
				if block
					block
			
		when 6
			h6.title(class=mods)=text
				if block
					block

mixin tSpan(text)
	if attributes.mods
		-var mods = []
		each mod, i in attributes.mods
			-mods[i] = 'title--' + mod
	
	span(class=mods)=text