.title
	&--we-do
		@extend $text-40, $fw500
		
		color blue-dark
		margin-bottom 15px
	
	&--how-works
		@extend $text-30, $fw900
		
		color white
		text-align center
		text-transform uppercase
		margin-bottom 30px
		width 100%
	
	&--promo-team
		@extend $text-40, $fw300
		
		color white
		
	&--team
		@extend $text-40, $fw900
		
		color blue-dark
		text-align center
		margin-bottom 40px
		width 100%
	
	&--rules
		@extend $text-40, $fw300
		
		color white

	&--dev
		margin-bottom 20px
	
	&--earn
		@extend $text-40, $fw500
		
		color red
	
	&--jataru
		@extend $text-60, $fw700
	
	&--red
		color red
	
	&--jataru-sub
		@extend $fw500, $main-text
		
		margin-bottom 50px
	
	&--way
		@extend $text-28, $fw500
		
		margin-bottom 3px
	
	&--tar
		text-align right
	
	&--cw
		color white
	
	&--about
	&--contacts
		@extend $text-50, $fw300
		
		color white
		position relative
	
	&--hdiw
	&--gallery
		@extend $text-50, $fw300
		
		color white
		position relative
		width 100%
		text-align center
		margin-bottom 10px
	
	&--questions
		@extend $text-24, $fw100
		
		margin-bottom 20px
		text-align center
	
	&--cap
		@extend $text-24, $fw300
	
	@media (min-width tablet)
		&--jataru
			font-size 4.375rem

		&--jataru-sub
			margin-bottom 90px
			font-size 1.25rem
		
		&--way
			font-size 2rem
		
		&--about
		&--contacts
			font-size 3.75rem
		
		&--hdiw
			font-size 3.75em
			margin-bottom 20px
	
		&--questions
			font-size 1.875rem
			margin-bottom 40px
	
	@media (min-width desktop)
		&--jataru
			font-size 5.625rem

		&--jataru-sub
			margin-bottom 130px
			font-size 1.5rem
			transform translate(3px, -75%)
		
		&--way
			font-size 2.25rem
			margin-bottom 10px
		
		&--hdiw
			font-size 3.875rem
			margin-bottom 60px
	
		&--questions
			margin-bottom 45px
		
		&--promo-team
		&--rules
		&--data
			font-size 4.375rem
		
		&--team
			margin-bottom 90px