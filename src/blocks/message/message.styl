.message
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	display none
	
	&--show
		display block
		animation modalShow .3s linear
	
	&__bg
		background-color rgba(black, .3)
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		cursor pointer
	
	&__window
		position relative
		margin-top 200px
		margin-right auto
		margin-left auto
		max-width 500px
		min-width 470px
		background-color white
		border-radius 3px
		padding 40px 25px 200px
		
		&:before
			@extend $pseudo, $abs
			
			width 190px
			background-size cover
			background-position center
			left 0
			right 0
			bottom 20px
			margin auto
		
	&--success &__window
		&:before
			height 154px
			background-image url('/img/message__img.png')
	
	&--fail &__window
		&:before
			height 151px
			background-image url('/img/message__img--fail.png')
	
	&__close
		@extend $btn-reset
		size 25px
		
		border-radius 50%
		background-color blue
		position absolute
		top 10px
		right 10px
		
		&:before
		&:after
			@extend $pseudo-center-old
			
			background-color white
			width 13px
			height 1px
		
		&:before
			transform rotate(-45deg)
		
		&:after
			transform rotate(45deg)
	
	&__text
		@extend $text-20