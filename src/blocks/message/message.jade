mixin message(text)
	if attributes.mods
		if typeof attributes.mods === 'string'
			-var mods = 'message--' + attributes.mods
		else
			-var mods = []
			each mod, i in attributes.mods
				-mods[i] = 'message--' + mod

	.message(class=mods)
		.message__bg
		.message__window
			button.message__close
			p.message__text=text