.gallery
	@extend $clearfix
	
	overflowX hidden
	padding-top 5px
	padding-bottom 5px
	
	&__item
		cursor pointer
		float Left
		width calc(50% - 2.5px)
		overflow hidden
		position relative
		margin-bottom 2px
			
		img
			display block
			transition all 3s ease
			transform scale(1)
			// position relative
			width 100%
	
	&__item:hover img
		transform scale(1.1)
	
	&__darkness
		position absolute
		width 100%
		height 100%
		top 0
		left 0
		opacity 0
		background-color rgba(black, .5)
		transition opacity 1s ease-in-out
	
	&__item:hover &__darkness
		opacity 1
	
	&__bg
		position fixed
		height 100%
		width 100%
		top 0
		left 0
		background-color rgba(black, .8)
		display none
	
	&__modal
		position fixed
		width 100%
		top 10%
		z-index 6
		text-align center
		display none
		
		img
			width 100%
			background-color rgba(black, .5)
			box-shadow 0 10px 20px rgba(black, .19),
				0 6px 6px rgba(black, .23)
			// padding 10px
			border 1px solid #fff
	
	&__more
		text-align center
		padding 10px
		color #004059
	
	@media (min-width 800px)
		&__item
			width calc(25% - 3.75px)
	
	@media (min-width 1200px)
		&__item
			width calc(20% - 4px)