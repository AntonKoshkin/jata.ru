.navigation
	width mobile - 50
	height 0
	overflow hidden
	position absolute
	top 100%
	right 15px
	transform translateY(-16px)
	slow height
	
	&--index
		transform translateY(0)

	&--open
		height 440px
	
	&--index&--open
		height 49px * 4 + 20
	
	&__list
		background-color blue-dark
		padding 10px
		position absolute
		bottom 0
		width 100%
		left 0
		border-radius 0 0 5px 5px

	&__item
		text-align center
		
		&:not(:last-child)
			border-bottom 1px solid rgba(white, .2)

		&--enter
			padding 15px 0
		
		&--for-advers
			padding 15px 0 5px

	&__link
		// @extend $fw500, $very-small-text
		@extend $fw500
		
		color white
		display block
		// text-transform uppercase
		padding 15px
		
	&__item--enter &__link
		btn-color blue
		
		position relative
		padding 9px 24px 7px 40px
		text-transform none
		border-radius 3px
		display inline-block
		
		&:before
			@extend $pseudo-left
			bicon lock 12px
			
			left 24px

	@media (min-width tablet)
		// flex-shrink 1
		height auto
		position static
		transform translateY(0)
		
		@media (max-width new-2)
			flex-basis 100%
		
		&--open
			height auto
		
		&--open&--index
			html > body  &
				height 100%
		
		&--index
			padding-left 10px
			padding-right 10px
		
		&__bg
			display none
		
		&__list
			position static
			padding 0
			display flex
			max-width 1000px
			margin-left auto
			justify-content space-between
			align-items center
			margin-bottom 15px
			background none
		
		&--index &__list
			justify-content flex-end
		
		&__item
			display inline-block
			
			&:not(:last-child)
				border-bottom 0
			
			&:hover
				text-decoration underline
			
			&--enter
			&--for-advers
				padding 0
		
		&--index &__item
			&:not(:first-child)
				margin-left 10px

		&__link
			padding 5px
			text-shadow 1px 1px 5px #000
