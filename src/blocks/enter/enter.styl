.enter
	@extend $font-reset
	
	display none
	
	.desktop &
		display block
	
	&__page
		@extend $main-fz
		
		display none
		
		&--show
			display block
		
		&--pt40
			padding-top 40px

	&__content
		width 300px
		margin-left auto
		margin-right auto
	
	&__btns
		display flex
		justify-content space-between
		margin-bottom 20px