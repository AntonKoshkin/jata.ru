mixin enter
	if attributes.mods
		-var mods = []
		each mod, i in attributes.mods
			-mods[i] = 'enter--' + mod

	.enter(class=mods)
		if block
			block

mixin enterPage
	if attributes.mods
		-var mods = []
		each mod, i in attributes.mods
			-mods[i] = 'enter__page--' + mod

	.enter__page(
		class=mods
		id=attributes.id)
		if block
			block

