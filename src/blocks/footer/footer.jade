mixin footer
	if attributes.mods
		-var mods = []
		each mod, i in attributes.mods
			-mods[i] = 'footer--' + mod

	if pageId === 'foradv'
		.footer__content.footer__content--foradv
			if block
				block
	else
		.footer__content
			if block
				block

mixin fInfo
	.footer__info
		if block
			block

mixin fBtns
	.footer__btns(ng-show=attributes["ng-show"])
		if block
			block