mixin way(side)
	if attributes.mods
		if typeof attributes.mods === 'string'
			-var mods = 'way--' + attributes.mods
		else
			-var mods = []
			each mod, i in attributes.mods
				-mods[i] = 'way--' + mod

	if side === 'ltr'
		.way.way--lb(class=mods)
			.way__content
				if block
					block
			.way__strips
				.way__strip.way__strip--tr
				.way__strip.way__strip--lb

	if side === 'rtl'
		.way.way--rb(class=mods)
			.way__content
				if block
					block
			.way__strips
				.way__strip.way__strip--rb
				.way__strip.way__strip--tl

	if side === 'rtb'
		.way.way--rb(class=mods)
			.way__content
				if block
					block
			.way__strips
				.way__strip.way__strip--half
				.way__strip.way__strip--rb
				.way__strip.way__strip--tl

mixin wControl
	.way__control
		if block
			block