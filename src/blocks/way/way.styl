.way
	padding-left 28px
	padding-right 28px
	
	&--tablet
		padding-top 35px
	
	&--start
		background-image url('/img/way__bg--start.jpg')
		background-repeat no-repeat
		background-position 50% 50%
		background-size cover
		margin-bottom 200px
		position relative
	
	&__content
		display flex
		flex-wrap wrap
		justify-content space-between
		
	&--lb &__content
		border-left 2px dashed gray
		position relative
		
		&:before
			@extend $pseudo, $abs, $blue-round-dot
			
			left -11px
			top 10px
	
	&--rb &__content
		border-right 2px dashed gray
		position relative
		
		&:before
			@extend $pseudo, $abs, $blue-round-dot
			
			right -11px
			top 10px

	&__strips
		height 200px
		display flex
		position relative
	
	&--start &__strips
		background-color white
		padding-left 28px
		padding-right 28px
		margin-left -28px
		margin-right -28px
		position absolute
		top 100%
		width 100%
	
	&__strip
		flex-basis 50%
		height 101px
		flex-grow 1
		flex-shrink 1
		
		&--tr
			border-left 2px dashed gray
			border-bottom 2px dashed gray
			border-radius 0 0 0 90px
			align-self flex-start
			
		&--lb
			border-top 2px dashed gray
			border-right 2px dashed gray
			border-radius 0 90px 0 0
			align-self flex-end
		
		&--tl
			border-right 2px dashed gray
			border-bottom 2px dashed gray
			border-radius 0 0 90px 0
			align-self flex-start
		
		&--rb
			border-top 2px dashed gray
			border-left 2px dashed gray
			border-radius 90px 0 0 0
			align-self flex-end
	
	@media (min-width tablet)
		padding-left 40px
		padding-right 40px
		
		&--tablet
			overflow hidden

		&--lb &__content
		&--rb &__content
			flex-wrap nowrap
	
	@media (min-width desktop)
		padding-left 120px
		padding-right 120px
	
		&__content
			justify-content space-between