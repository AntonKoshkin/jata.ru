.foot-nav
	flex-grow 1
	
	&__list
		list-style-type none
		flex-wrap wrap
		display flex
		
		.ie10 &
		.ie11 &
		.ios &
			display block

	
	&__half
		flex-basis 50%
		
		.ie10 &
		.ie11 &
		.ios &
			width 100%
		
	&__item
		@extend $one-row
		
		margin-bottom 10px

	&__half:last-child &__item:last-child
		margin-bottom 0
	
	&__link
		@extend $main-text, $fw300
		
		color white
	
	@media (min-width tablet)
		max-width 520px
		
		.ie10 &
		.ie11 &
		.ios &
			max-width auto
			float left
		
		&__list
			.ie10 &
			.ie11 &
			.ios
				width 520px
				flex-wrap nowrap
				display flex
		
		&__half
			.ie10 &
			.ie11 &
			.ios
				width 50%