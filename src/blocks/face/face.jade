mixin face
	if attributes.mods
		if typeof attributes.mods === 'string'
			-var mods = attributes.mods.split(' ')

			if mods.length < 2
				-mods = 'face--' + attributes.mods
			else
				-var mods = []
				each mod, i in attributes.mods
					-mods[i] = 'paragraph--' + mod
		else
			-var mods = []
			each mod, i in attributes.mods
				-mods[i] = 'paragraph--' + mod

	.face(class=mods)
		.face__face
			img.face__img(
				alt=attributes.alt || ''
				src=attributes.src)
			.face__frame
		p.face__name!=attributes.name
		if block
			block