.up-btn
	@extend $btn-reset
	
	width 50px
	height @width
	background-color blue
	border-radius 50%
	transition background-color .3s,
		opacity .3s,
		visibility .3s
	position fixed
	bottom 240px
	right 20px
	box-shadow 3px 3px 10px rgba(black, .3),
		inset -2px -2px 5px rgba(black, .25)
	opacity 0
	visibility hidden
	
	&:before
		@extend $pseudo-center-old
		bicon(down-arrow-white, 24)
		
		transform rotate(180deg)
	
	&:hover
		background-color lightness(blue, lightness(blue) + 5%)
	
	&:active
		box-shadow 3px 3px 10px rgba(black, .3),
			inset 2px 2px 5px rgba(black, .25)
		
		&:before
			top 1px
			left 1px
	
	&--show
		opacity 1
		visibility visible