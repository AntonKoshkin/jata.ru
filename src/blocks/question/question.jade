mixin questions
	if attributes.mods
		if typeof attributes.mods === 'string'
			-var mods = 'questions--' + attributes.mods
		else
			-var mods = []
			each mod, i in attributes.mods
				-mods[i] = 'questions--' + mod

	.questions(class=mods)
		if block
			block

mixin qItem
	if attributes.mods
		if typeof attributes.mods === 'string'
			-var mods = 'questions__item--' + attributes.mods
		else
			-var mods = []
			each mod, i in attributes.mods
				-mods[i] = 'questions__item--' + mod

	.questions__item(
		style=attributes.style
		class=mods)
		if block
			block

mixin question(title)
	.question
		.question__header
			h3.question__title=title
		.question__body
			p.question__text
				if block
					block