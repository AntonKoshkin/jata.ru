.questions
	@extend $clearfix
	
	max-width 960px
	margin auto

	&__item
		width 100%
		float left
		margin 0 -100% -0px 0
		position relative

.question
	padding 10px 25px
	background-color white
	box-shadow 2px 2px 3px rgba(black, .1)
	cursor pointer
	
	&:not(:last-child)
		margin-bottom 5px
	
	&__header
		display flex
		align-items center
		justify-content flex-start
		height 56px

	&__title
		@extend $text-18, $fw300
		
		padding-left 40px
		position relative
		
		&:before
			@extend $pseudo-left
			bicon(cloud-question-blue, 26)
	
	&__body
		display none
		overflow hidden
	
	&__text
		@extend $text-14
		
		padding-bottom 10px