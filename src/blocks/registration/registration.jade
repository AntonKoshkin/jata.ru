mixin registration
	if attributes.mods
		-var mods = []
		each mod, i in attributes.mods
			-mods[i] = 'registration--' + mod

	.registration(class=mods)
		if block
			block

mixin regPage
	if attributes.mods
		-var mods = []
		each mod, i in attributes.mods
			-mods[i] = 'registration__page--' + mod

	.registration__page(
		class=mods
		id=attributes.id)
		.registration__content
			if block
				block