mixin point(img, title, text)
	if attributes.mods
		if typeof attributes.mods === 'string'
			-var mods = 'point--' + attributes.mods
		else
			-var mods = []
			each mod, i in attributes.mods
				-mods[i] = 'point--' + mod

	.point(class=mods)
		.point__point
		.point__desc
			.point__face
				img.point__img(
					src='/img/point__'+img+'.jpg'
					alt='')
			.point__texts
				p.point__text!=title
				p.point__text!=text